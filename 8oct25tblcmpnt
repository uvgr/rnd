.user-table-container {
  width: 100%;
  margin: 0 auto;
  font-family: sans-serif;
}

.table-top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.global-search {
  flex: 1;
