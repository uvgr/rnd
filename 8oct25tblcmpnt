  width: 90%;
  padding: 4px;
  border: 1px solid #ddd;
  border-radius: 3px;
  font-size: 13px;
}

.fade-enter-active,
.fade-leave-active {
  transition: all 0.3s ease;
}
.fade-enter-from,
.fade-leave-to {
  opacity: 0;
  transform: translateX(10px);
}
